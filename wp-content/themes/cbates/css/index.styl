x = 16px
txt = #ccc

df()
  s x
  lh 1.5
  ff sans
  c txt

link = #0ae
hover = #fff

a
  vertical-align top
  color link
  td none
  &:hover, &:focus
    color hover

html
  height 100%

body
  df()
  bg m30
  overflow-x hidden
  pt x*4
  &.fs
    overflow hidden

#contentWrapper
  cnt()
  p x*4 0

  #content
    position relative
    z-index 10

    h1
      f 200%/1.5 sans
      mb 1.5em
      font-smoothing()
      c #fff
      a
        c #fff
        &:hover
          c link
      

    #pageWrapper
      col 8
      font-smoothing()

      > p:first-of-type
        s 150%
        ff serif

      img.alignnone, img.alignleft, img.alignright
        m 0 0 1em


     
      h2, .h2
        f 150%/1.5 sans
        display block
        mb x
        a
          color txt
          transition
          bb 1px solid transparent
          &:hover
            bc anchor

      h3
        alt-font()
        fw bold
        mb x
        tt uppercase
        ls 1px
        c #999
        s 85%


      p, ul, ol
        mb 1.5em

      ol li
        list-style decimal

      pre, code
        ff monospace
        s 13px

      sup
        bottom 1ex

      sub
        top .5ex

      blockquote
        s 1.5em
        pl 1.5em
        bl 5px solid w10
        mb 1.5em
