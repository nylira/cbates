body.fs img.preview
  position absolute
  left 0px
  top 0px
  width 100%

#imageWrapper
  fixed bottom 0
  width 100%

#image_scroller
  bg url(img/trans_bg.png) 
  bg b70
  position relative
  overflow hidden

  .container
    relative left 0
    p x 0
    clearfix()
    height 122px
    overflow hidden

    .image
      float left

      img, img.clone
        display block
        width 180px
        height 120px
        b 1px solid #000
        br none

#overlay
  width 100%
  height 100%
  position fixed
  top 0px
  left 0px
  background transparent url(img/icons/overlay.png) repeat bottom left

#loading
  display none
  position fixed
  top 50%
  left 50%
  margin -35px 0px 0px -35px
  background #000000 url(img/icons/loader.gif) no-repeat center center
  width 70px
  height 70px
  border-radius 10px
  z-index 999
  opacity 0.7

#next, #prev
  width 50px
  height 50px
  position fixed
  top 45%
  cursor pointer
  opacity 0.5
  &:hover
    opacity 0.9

#next
  background #000000 url(img/icons/next.png) no-repeat center center
  right -50px

#prev
  background #000000 url(img/icons/prev.png) no-repeat center center
  right -50px

#toggle
  width 50px
  lhh 50px
  background #000000 url(img/toggle.png) no-repeat center center
  text-align center
  letter-spacing 1px
  position fixed
  fixed bottom 25px left 50%
  ml -25px
  cursor pointer
  opacity 0.7
  text-indent -9999px
  border-radius 5px 5px 0 0
  &:hover
    opacity 1
